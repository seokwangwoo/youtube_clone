extends base.pug

block content
  h4 Change Title of video
  form(action="", method="POST")
    input(
      name="title",
      placeholder=`${pageTitle}`,
      value=`${video.title}`,
      required,
      type="text"
    )
    input(
      name="description",
      placeholder="Description",
      required,
      type="text",
      value=video.description
    )
    input(
      name="hashtags",
      placeholder="Hashtags",
      required,
      type="text",
      value=video.hashtags.join()
    )
    input(value="Save", type="submit")
