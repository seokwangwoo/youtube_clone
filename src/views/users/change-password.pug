extends ../base

block content
  if (errorMessage)
    span= errorMessage
  form(method="POST")
    small Old password
    input(name="oldPassword", type="password", required) 
    small New Password
    input(name="newPassword", type="password", required) 
    small New Password Confirmation
    input(name="newPassword2", type="password", required) 
    input(type="submit", value="Change")
